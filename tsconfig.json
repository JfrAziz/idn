{
  "extends": "astro/tsconfigs/strict",
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "verbatimModuleSyntax": false,
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["./lib/*"],
      "@data/*": ["./data/*"],
      "@styles/*": ["./styles/*"],
      "@features/*": ["./features/*"],
      "@components/*": ["./components/*"],
    }
  }
}
